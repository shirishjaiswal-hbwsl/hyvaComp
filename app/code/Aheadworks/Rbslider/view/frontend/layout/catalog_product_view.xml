<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.top">
            <block class="Aheadworks\Rbslider\Block\Banner" name="banner_product_menu_top" as="banner_product_menu_top" before="navigation.sections">
                <arguments>
                    <!-- Menu Top -->
                    <argument name="block_position" xsi:type="string">1</argument>
                    <!-- Product Page -->
                    <argument name="block_type" xsi:type="string">2</argument>
                </arguments>
            </block>
            <block class="Aheadworks\Rbslider\Block\Banner" name="banner_product_menu_bottom" as="banner_product_menu_bottom" after="navigation.sections">
                <arguments>
                    <!-- Menu Bottom -->
                    <argument name="block_position" xsi:type="string">2</argument>
                    <!-- Product Page -->
                    <argument name="block_type" xsi:type="string">2</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Aheadworks\Rbslider\Block\Banner" name="banner_product_content_top" as="banner_product_content_top" before="product.info.main">
                <arguments>
                    <!-- Content Top -->
                    <argument name="block_position" xsi:type="string">3</argument>
                    <!-- Product Page -->
                    <argument name="block_type" xsi:type="string">2</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="page.bottom">
            <block class="Aheadworks\Rbslider\Block\Banner" name="banner_product_page_bottom" as="banner_product_content_sidebar_bottom" after="-">
                <arguments>
                    <!-- Page bottom -->
                    <argument name="block_position" xsi:type="string">4</argument>
                    <!-- Product Page -->
                    <argument name="block_type" xsi:type="string">2</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
